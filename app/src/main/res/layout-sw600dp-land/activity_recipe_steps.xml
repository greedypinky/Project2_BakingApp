<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeStepsActivity">

    <!-- left pane layout -->
    <!-- need to specify the fragment class -->
    <fragment
        android:id="@+id/fragment_recipe_steps_land"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.project2.bakingapplication.RecipeStepsFragment">
    </fragment>

    <!-- TODO: Create one more xml file that includes the right pane -->
    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <!-- right pane layout -->

    <fragment
        android:id="@+id/fragment_recipe_detail_land"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:name="com.project2.bakingapplication.StepDetailFragment">
    </fragment>


</LinearLayout>